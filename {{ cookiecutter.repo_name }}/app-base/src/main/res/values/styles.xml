<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chaperone" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorWhite</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">

        <!-- This attributes is used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/colorWhite</item>
    </style>

    <!--Text-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">--</item>
        <item name="android:ellipsize">end</item>
        <item name="android:supportsRtl">true</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">@dimen/size_content</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/fontMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/fontMarginBottom</item>

        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HeadingExtraLarge" parent="TextViewStyle">
        <item name="android:textSize">@dimen/size_heading_large_extra</item>
    </style>

    <style name="HeadingExtraLargeBold" parent="HeadingExtraLarge">
        <item name="android:textSize">@dimen/size_heading_large_extra</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/bold</item>-->
    </style>

    <style name="HeadingLarge" parent="TextViewStyle">
        <item name="android:textSize">@dimen/size_heading_large</item>
        <!--<item name="android:fontFamily">@font/bold</item>-->
    </style>

    <style name="HeadingLargeBold" parent="HeadingLarge">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/bold</item>-->
    </style>

    <style name="Heading" parent="TextViewStyle">
        <item name="android:textSize">@dimen/size_heading</item>
    </style>

    <style name="HeadingBold" parent="Heading">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/bold</item>-->
    </style>

    <style name="SubHeading" parent="TextViewStyle">
        <item name="android:textSize">@dimen/size_sub_heading</item>
        <!--<item name="android:fontFamily">@font/bold_semi</item>-->
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="SubHeadingBlack" parent="SubHeading">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SubHeadingWhite" parent="SubHeading">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SubHeadingAr" parent="SubHeading">
        <item name="android:paddingTop">@dimen/fontPaddingTop</item>
        <item name="android:paddingBottom">@dimen/fontPaddingBottom</item>
        <!--<item name="android:fontFamily">@font/regular_ar</item>-->
    </style>

    <style name="SubHeadingBold" parent="SubHeading">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/bold</item>-->
    </style>

    <style name="ToolbarSubHeading" parent="TextViewStyle">
        <item name="android:textSize">@dimen/size_sub_heading</item>
        <!--<item name="android:fontFamily">@font/bold_semi</item>-->
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ToolbarSubHeadingBold" parent="ToolbarSubHeading">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/bold</item>-->
    </style>

    <style name="ToolbarSubHeadingBoldAr" parent="ToolbarSubHeading">
        <item name="android:paddingTop">@dimen/fontPaddingTop</item>
        <item name="android:paddingBottom">@dimen/fontPaddingBottom</item>
        <!--<item name="android:fontFamily">@font/bold</item>-->
    </style>

    <style name="Content" parent="TextViewStyle">
        <item name="android:textSize">@dimen/size_content</item>
        <!--<item name="android:fontFamily">@font/regular</item>-->
        <item name="android:textColor">@color/colorGreyLight</item>
    </style>

    <style name="ContentBlack" parent="Content">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ContentBold" parent="TextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_content</item>
        <!--<item name="android:fontFamily">@font/bold_semi</item>-->
        <item name="android:textColor">@color/colorGreyLight</item>
    </style>

    <style name="ContentInverse" parent="Content">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ContentTiny" parent="TextViewStyle">
        <!--<item name="android:fontFamily">@font/regular</item>-->
        <item name="android:textSize">@dimen/size_content_tiny</item>
        <item name="android:textColor">@color/colorGreyLight</item>
    </style>

    <style name="ContentTinyBlack" parent="ContentTiny">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--Edit Text-->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">?attr/subHeadingFont</item>

    </style>

    <style name="EditTextStyleLight" parent="EditTextStyle">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/bg_edittext_light</item>
    </style>

    <style name="EditTextStyleDark" parent="EditTextStyle">
        <item name="android:background">@drawable/bg_edittext_dark</item>
        <item name="android:textColorHint">@color/colorGreyLighter</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--Card-->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_radius_3x</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/card_padding_tripe</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CardViewStyleNoPadding" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_radius_1x</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CardViewStyle.Outlined" parent="CardViewStyle">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!--Button-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <!--<item name="android:fontFamily">?attr/subHeadingBoldFont</item>-->
    </style>

    <style name="ButtonStyleNoShadow" parent="ButtonStyle">
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="ButtonStyle.RoundedCornors" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_button_rounded_cornors</item>
        <!--<item name="android:fontFamily">?attr/subHeadingFont</item>-->
    </style>

    <style name="ButtonStyle.RoundedCornors.NoShadow" parent="ButtonStyleNoShadow">
        <item name="android:background">@drawable/bg_button_rounded_cornors</item>
        <!--<item name="android:fontFamily">?attr/subHeadingFont</item>-->
    </style>

    <style name="ButtonStyle.Red" parent="ButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorRed</item>
        <!--<item name="android:fontFamily">?attr/subHeadingFont</item>-->
    </style>

    <style name="ButtonStyle.White.Simple" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorAccent</item>
        <!--<item name="android:fontFamily">?attr/subHeadingFont</item>-->
    </style>

    <style name="ButtonStyle.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:fontFamily">?attr/subHeadingFont</item>-->
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal" />

</resources>